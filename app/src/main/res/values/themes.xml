<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Flexiride" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/black_light</item>
        <item name="android:windowBackground">@color/black_light</item>

    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorErrorRed</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">end|right</item>
        <item name="android:background">@color/edit_text_text_color</item>
    </style>

    <style name="Theme.Flexiride" parent="Base.Theme.Flexiride" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#D4E7CE</item>
        <item name="colorControlActivated">#FFD500</item>
        <item name="android:fontFamily">@font/nunito_regular</item>

    </style>

    <style name="spinnerNewTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="background">@color/background_grey</item>
        <item name="android:colorAccent">@color/white</item>
    </style>

    <style name="Spinner" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textColor">@color/owner_signup</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>


    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="backgroundColor">@color/background_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>

    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/accent</item>
        <item name="rippleColor">@color/accent</item>
        <item name="android:color">@color/accent</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

</resources>